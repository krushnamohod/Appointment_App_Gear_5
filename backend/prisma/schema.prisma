datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


enum Role {
  CUSTOMER
  ADMIN
  ORGANISER
  PROVIDER
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
  PAYMENT_FAILED
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  avatar       String?
  role         Role          @default(CUSTOMER)
  isActive     Boolean       @default(true)
  bookings     Booking[]
  transactions Transaction[]
  createdAt    DateTime      @default(now())
}

model Service {
  id                    String    @id @default(uuid())
  name                  String
  duration              Int
  price                 Int       @default(0)
  image                 String?
  capacity              Int       @default(1)
  manageCapacity        Boolean   @default(false)
  questions             Json?
  venue                 String?
  resourceType          String?   // e.g., 'COURT', 'VENUE'
  
  // Options tab fields
  manualConfirmation    Boolean   @default(false)
  capacityLimit         Int       @default(50)
  paidBooking           Boolean   @default(false)
  bookingFee            Int       @default(0)
  slotCreation          String    @default("00:30")
  cancellationHours     String    @default("01:00")
  
  // Misc tab fields
  introductionMessage   String?
  confirmationMessage   String?
  
  isPublished           Boolean   @default(false)
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  providers             Provider[]
  slots                 Slot[]
}

model Provider {
  id           String   @id @default(uuid())
  name         String
  avatar       String?
  serviceId    String
  workingHours Json
  service      Service  @relation(fields: [serviceId], references: [id])
  slots        Slot[]
}

model Slot {
  id          String    @id @default(uuid())
  serviceId   String
  providerId  String?
  resourceId  String?
  startTime   DateTime
  endTime     DateTime
  capacity    Int
  bookedCount Int       @default(0)
  service     Service   @relation(fields: [serviceId], references: [id])
  provider    Provider? @relation(fields: [providerId], references: [id])
  resource    Resource? @relation(fields: [resourceId], references: [id])
  bookings    Booking[]

  @@unique([providerId, resourceId, serviceId, startTime])
}

model Booking {
  id           String        @id @default(uuid())
  userId       String
  slotId       String
  status       BookingStatus @default(CONFIRMED)
  capacity     Int           @default(1)
  answers      Json?
  totalPrice   Int           @default(0)
  user         User          @relation(fields: [userId], references: [id])
  slot         Slot          @relation(fields: [slotId], references: [id])
  transactions Transaction[]
  createdAt    DateTime      @default(now())
}

model Transaction {
  id                    String   @id @default(uuid())
  bookingId             String?
  userId                String
  amount                Int
  status                String   @default("PENDING") // PENDING, SUCCESS, FAILED
  provider              String   @default("PHONEPE")
  merchantTransactionId String   @unique
  providerReferenceId   String?
  paymentMode           String?
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  booking               Booking? @relation(fields: [bookingId], references: [id])
  user                  User     @relation(fields: [userId], references: [id])
}

model Resource {
  id              String     @id @default(uuid())
  name            String
  capacity        Int        @default(1)
  parentId        String?
  workingHours    Json?      // To support automatic slot generation for resources
  type            String?    // e.g., 'COURT', 'VENUE', 'EQUIPMENT'
  parent          Resource?  @relation("ResourceHierarchy", fields: [parentId], references: [id])
  linkedResources Resource[] @relation("ResourceHierarchy")
  slots           Slot[]
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
}
