datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


enum Role {
  CUSTOMER
  ADMIN
  ORGANISER
  PROVIDER
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CUSTOMER)
  isActive  Boolean  @default(true)
  bookings  Booking[]
  createdAt DateTime @default(now())
}

model Service {
  id          String   @id @default(uuid())
  name        String
  duration    Int
  capacity    Int
  isPublished Boolean  @default(false)
  providers   Provider[]
  slots       Slot[]
}

model Provider {
  id           String   @id @default(uuid())
  name         String
  serviceId    String
  workingHours Json
  service      Service  @relation(fields: [serviceId], references: [id])
  slots        Slot[]
}

model Slot {
  id          String   @id @default(uuid())
  serviceId   String
  providerId  String
  startTime   DateTime
  endTime     DateTime
  capacity    Int
  bookedCount Int      @default(0)
  service     Service  @relation(fields: [serviceId], references: [id])
  provider    Provider @relation(fields: [providerId], references: [id])
  bookings    Booking[]
}

model Booking {
  id        String        @id @default(uuid())
  userId    String
  slotId    String
  status    BookingStatus @default(CONFIRMED)
  user      User          @relation(fields: [userId], references: [id])
  slot      Slot          @relation(fields: [slotId], references: [id])
  createdAt DateTime      @default(now())
}